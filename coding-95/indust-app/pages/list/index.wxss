/**explore.wxss**/
.photos {
  display: flex;
  height: 1024px;
}

.photo-list {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.photo-item {
  position: relative;
  display: flex;
  width: 375rpx;
  height: 375rpx;
}

.photo {
  width: 100%;
  height: 100%;
  background-size: cover;
}

.icon-detail {
  display: none;
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  padding-top: 25rpx;
  top: 20rpx;
  right: 14rpx;
  z-index: -1;
}

.icon-comments {
  display: none;
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  padding-top: 25rpx;
  top: 150rpx;
  right: 15rpx;
  z-index: -1;
}

.pin {
  display: none;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 280rpx;
  right: 10rpx;
  text-align: center;
  z-index: -1;
}

.detail-layer {
  display: none;
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 250rpx;
  z-index: 1;
}

.pin-layer {
  display: none;
  position: absolute;
  right: 0;
  top: 250rpx;
  width: 100rpx;
  height: 125rpx;
  z-index: 1;
}

.show-layer {
  display: block;
}